# Database
DATABASE_URL="postgresql://username:password@localhost:5432/roteiros_db"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
FACEBOOK_CLIENT_ID="your-facebook-client-id"
FACEBOOK_CLIENT_SECRET="your-facebook-client-secret"
APPLE_ID="your-apple-id"
APPLE_TEAM_ID="your-apple-team-id"
APPLE_PRIVATE_KEY="your-apple-private-key"
APPLE_KEY_ID="your-apple-key-id"

# Google APIs
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
GOOGLE_MAPS_API_KEY="your-google-maps-server-key"
GOOGLE_TRANSLATE_API_KEY="your-google-translate-key"

# Partner APIs
CIVITATIS_API_KEY="your-civitatis-api-key"
CIVITATIS_AFFILIATE_ID="your-civitatis-affiliate-id"
GETYOURGUIDE_API_KEY="your-getyourguide-api-key"
GETYOURGUIDE_AFFILIATE_ID="your-getyourguide-affiliate-id"
VIATOR_API_KEY="your-viator-api-key"
VIATOR_AFFILIATE_ID="your-viator-affiliate-id"
TIQETS_API_KEY="your-tiqets-api-key"
TIQETS_AFFILIATE_ID="your-tiqets-affiliate-id"
BOOKING_AFFILIATE_ID="your-booking-affiliate-id"
AIRBNB_AFFILIATE_ID="your-airbnb-affiliate-id"

# Payment Processing
STRIPE_SECRET_KEY="your-stripe-secret-key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Redis (for caching)
REDIS_URL="redis://localhost:6379"

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="roteiros-app-uploads"

# Email Service (SendGrid/Resend)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@roteiros.app"

# Apple Wallet Certificates
APPLE_WALLET_TEAM_ID="your-apple-team-id"
APPLE_WALLET_PASS_TYPE_ID="pass.com.roteiros.ingresso"
APPLE_WALLET_CERTIFICATE_PATH="./certs/pass.p12"
APPLE_WALLET_CERTIFICATE_PASSWORD="your-certificate-password"
APPLE_WALLET_WWDR_PATH="./certs/WWDR.pem"

# Monitoring & Analytics
SENTRY_DSN="your-sentry-dsn"
NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-vercel-analytics-id"

# Environment
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE="100"

# Feature Flags
ENABLE_OFFLINE_MODE="true"
ENABLE_PUSH_NOTIFICATIONS="true"
ENABLE_APPLE_WALLET="true"
ENABLE_GOOGLE_WALLET="true"